{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "src/",
    "outDir": "dist/",
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "allowJs": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noUnusedParameters": true,
    "suppressImplicitAnyIndexErrors": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitThis": false,
    "noUnusedLocals": false,
    "allowUnreachableCode": false,
    "removeComments": true,
    "declaration": false,    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",    
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "sample",
    "dist",
    "build",
    "test",
    "coverage",
    "gulpfile.js",
    "setup.js"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}

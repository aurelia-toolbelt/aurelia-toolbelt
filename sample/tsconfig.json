{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "../",
    "outDir": "dist",
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "baseUrl": "./",
    "paths": {
      "aurelia-v-grid": ["../src"]
    }
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./typings/index.d.ts",
    "./custom_typings/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages",
    "**/lib.es6.d.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}
{
  "verbose": true,
  "transform": {
    "^.+\\.tsx?$": "./node_modules/ts-jest/preprocessor.js"
  },
  "testRegex": ".*(\\.test|\\.spec)\\.(jsx?|tsx?)",
  "testPathIgnorePatterns": [
    "build",
    "dist",
    "sample"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json"
  ],
  "roots": [
    "<rootDir>/test"
  ],
  "testEnvironment": "node",
  "setupFiles": [
    "<rootDir>/test/jest.setup.ts"
  ],
  "modulePaths": [
    "<rootDir>/src",
    "<rootDir>/node_modules"
  ],
  "coverageReporters": [
    "json",
    "html",
    "text",
    "lcov",
    "clover"
  ]
}

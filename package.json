    "build:bootstrap-plus": "yarn workspace @aurelia-toolbelt/bootstrap-plus run build",
    "build:components": "yarn workspace @aurelia-toolbelt/components run build",
    "build:core": "yarn workspace @aurelia-toolbelt/core run build",
    "build:jquery": "yarn workspace @aurelia-toolbelt/jquery run build",

    "watch:dashboard": "yarn workspace @aurelia-toolbelt/dashboard run watch",
    "watch:bootstrap": "yarn workspace @aurelia-toolbelt/bootstrap run watch",
    "watch:bootstrap-plus": "yarn workspace @aurelia-toolbelt/bootstrap-plus run watch",
    "watch:components": "yarn workspace @aurelia-toolbelt/components run watch",
    "watch:core": "yarn workspace @aurelia-toolbelt/core run watch",
    "watch:jquery": "yarn workspace @aurelia-toolbelt/jquery run watch",
    "watch:persian": "yarn workspace @aurelia-toolbelt/persian run watch",

    "test:unit:all": "lerna exec --bail false --concurrency 1  -- yarn run test:unit"

  },
  "workspaces": [
    "packages/*"
  ]
